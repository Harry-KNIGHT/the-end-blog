
<h1 align="center">Cr√©ation d'utilisateur</h1>

<%= render 'shared/errors', obj: @user%>

<div class="row">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f|%>

        <div class="form-group">
            <div class="col-sm-2 control-label">
               <%= f.label :username %>
            </div>
            <div  class="col-sm-6">
               <%= f.text_field :username,  class:"form-control", placeholder:"Votre pseudo"%>
            </div>

        </div>
            <div class="form-group">
                <div class="col-sm-2 control-label">
                <%= f.label :email %>
            </div>
            <div  class="col-sm-6">
              <%= f.text_field :email, rows: 9,  class:"form-control", placeholder:"Votre email"%>
            </div>
        </div>
      

        <div class="form-group">
            <div class="col-sm-2 control-label">
               <%= f.label :password %>
            </div>
         <div  class="col-sm-6">
               <%= f.password_field :password,  class:"form-control", placeholder:"Votre mot de passe"%>
         </div>

        <div class="form-group">
          <div class="col-sm-offset-24 col-sm-1">
                <%= f.submit "S'inscrire", class:"btn btn-default" %>
         </div>
       </div>

      
    <% end %>
</div>